<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/deepgreen"
    app:cardCornerRadius="8sp"
    app:cardElevation="4sp"
    android:layout_margin="4sp">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:src="@drawable/launch_flower" />

    <TextView
        android:id="@+id/name_edittext"
        style="@style/Base.Theme.Plantasia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="8sp"
        android:layout_toEndOf="@id/Image"
        android:textStyle="bold"
        android:textColor="@color/pinkshwhite"/>

    <TextView
        android:id="@+id/species_edittext"
        style="@style/Base.Theme.Plantasia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8sp"
        android:layout_toEndOf="@id/Image"
        android:layout_below="@id/name_edittext"
        android:textColor="@color/pinkshwhite" />

    <TextView
        android:id="@+id/age_edittext"
        style="@style/Base.Theme.Plantasia"
        android:padding="8sp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/Image"
        android:layout_below="@id/species_edittext"
        android:layout_width="match_parent"
        android:textColor="@color/pinkshwhite" />

</RelativeLayout>
</androidx.cardview.widget.CardView>